
{%- for promo in section.blocks -%}
  <div
    class="promo-banner tw-w-full"
    style="background-color: {{ promo.settings.bg_color }}; color: {{ promo.settings.text_color }}; display: none;"
    data-promo-banner="{{ promo.id }}"
    data-promo-banner-utm-medium="{{ promo.settings.utm_medium }}"
    data-promo-banner-code="{{ promo.settings.discount_code }}"
  >
    <div class="tw-container tw-mx-auto tw-flex tw-justify-between tw-space-x-4">
      <p class="tw-flex-grow tw-py-4">{{ promo.settings.message }}</p>
      <button class="tw-py-4" data-close-promo-banner="{{ promo.id }}">close</button>
    </div>
  </div>
{%- endfor -%}

{% schema %}
  {
    "name": "Promo Banner",
    "settings": [],
    "blocks": [
      {
        "type": "promo",
        "name": "Promo",
        "settings": [
          {
            "type": "header",
            "content": "Content"
          },
          {
            "type": "text",
            "id": "message",
            "label": "Message"
          },
          {
            "type": "text",
            "id": "utm_medium",
            "label": "utm_medium"
          },
          {
            "type": "text",
            "id": "discount_code",
            "label": "Discount Code"
          },
          {
            "type": "header",
            "content": "Colors"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background",
            "default": "#aaa"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "default": "#000"
          }
        ]
      }
    ]
  }
{% endschema %}
